{
    "source": {
        "include": ["src"],
        "includePattern": "\\.(jsx|js|ts|tsx)$",
        "excludePattern": "(node_modules/jdocs)"

    },
    "tags": {
        "allowUnknownTags": ["optional"]
    },
    "plugins": ["node_modules/better-docs/typescript"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "template": "node_modules/better-docs",
        "destination": "./docs"
    }
}